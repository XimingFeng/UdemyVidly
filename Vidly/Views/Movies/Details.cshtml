
@using Vidly.Models
@model Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<br />

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToString("dddd, MMM dd, yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dddd, MMM dd, yyyy")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>


