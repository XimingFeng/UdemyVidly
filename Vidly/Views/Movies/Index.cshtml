
@using Vidly.Models
@model IEnumerable<Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<br />

<div>
    @Html.ActionLink("New", "New", "Movies", null, new {@class="btn btn-primary"})
</div>

<br />

<table class="table table-bordered table-hover">
    <thead>
    <th>Movie</th>
    <th>Genre</th>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }

    </tbody>

</table>
